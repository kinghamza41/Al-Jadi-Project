<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aljadiproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlJadiProject"
        android:usesCleartextTraffic="true">
        <activity android:name=".LeavesTodayActivity"></activity>
        <activity android:name=".PendingActivity" />
        <activity android:name=".AbsentActivity" />
        <activity android:name=".NavigationDrawer.NavigationDrawer" />
        <activity android:name=".PresentActivity" />
        <activity android:name=".Dashboard" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>